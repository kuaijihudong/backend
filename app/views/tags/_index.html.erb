



    <h2>标签一览</h2>


<table id="rounded-corner" summary="">
    <thead>
      <tr>
            <th scope="col" class="rounded">标签名称</th>
            <th scope="col" class="rounded">标签描述</th>
            <th scope="col" class="rounded">编辑</th>
            <th scope="col" class="rounded-q4">删除</th>
        </tr>
    </thead>
    <tbody>
      <% if @tags.blank? %>
        <tr><td colspan="4">没有标签。</td></tr>

      <% else %>
      <% @tags.each do |c|%>
        <tr>
          <td><%= c.name%></td>
          <td><%= c.description%></td>
          <td><%= link_to image_tag("user_edit.png"), edit_tag_path(c)%></td>
          <td>
            <%= link_to image_tag("trash.png"), tag_path(c), data: { confirm: '确认删除该标签吗?' }, :method => "delete" %>
            </td>
        </tr>
        <% end %>
      <% end%>



    </tbody>
</table>

