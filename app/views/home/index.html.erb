



    <h2>新闻一览</h2>


<table id="rounded-corner" summary="2007 Major IT Companies' Profit">
    <thead>
      <tr>
          <th scope="col" class="rounded-company">类型</th>
            <th scope="col" class="rounded">标题</th>
            <th scope="col" class="rounded">状态</th>
            <th scope="col" class="rounded">来源</th>
            <th scope="col" class="rounded">标签</th>
            <th scope="col" class="rounded">阅读数</th>
            <th scope="col" class="rounded">发布人</th>
            <th scope="col" class="rounded">发布时间</th>
            <th scope="col" class="rounded">编辑</th>
            <th scope="col" class="rounded-q4">删除</th>
        </tr>
    </thead>
    <tbody>
      <% if @blogs.blank? %>
        <tr><td colspan="10">没有发布过新闻。</td></tr>

      <% else %>
      <% @blogs.each do |blog|%>
        <tr>
          <td>
            <%= blog.type %>
          </td>
          <td><%= blog.title%></td>
          <td><%= blog.status %></td>
          <td><%= blog.from%></td>
          <td><%= blog.tag%></td>
          <td><%= blog.view_count%></td>
          <td><%= blog.created_by%></td>
          <td><%= blog.created_at%></td>
          <td><a href="#"><img src="<%= image_path('user_edit.png')%>" alt="" title="" border="0" /></a></td>
          <td><a href="#" class="ask"><img src="<%= image_path('trash.png')%>" alt="" title="" border="0" /></a></td>
        </tr>
        <% end %>
      <% end%>



    </tbody>
</table>

